<%= notice %>

<% if @message.errors.present? %>
  <div class="alert alert-danger">
    <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li><%= full_message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<div class="row">
  <aside>
    <section class="user_info">
        <span><%= @maid.name %></span>
        <span><%= @maid.description %></span>
        <span><%= @maid.time %></span>
        <span><%= @maid.place %></span>
        <span><%= @maid.thumbnail %></span>
    </section>
  </aside>
</div>
 
<%= render 'shared/maid_message' %>